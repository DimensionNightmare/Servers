    "version": "0.2.0",
    "configurations": [
        {
            "name": "(cmake) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
			// "args": ["svrType=1", "ip=127.0.0.1", "port=1270"],
            // "args": ["svrType=2", "byCtl=1", "ctlIp=127.0.0.1", "ctlPort=1270"],
			// "args": ["svrType=3", "port=1212", "byCtl=1", "ctlIp=127.0.0.1", "ctlPort=1270"],
			"args": ["svrType=6", "port=1212", "byCtl=1", "ctlIp=127.0.0.1", "ctlPort=1270"],
            "stopAtEntry": false,
            "cwd": "${command:cmake.getLaunchTargetDirectory}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
                }
            ],
            "console": "integratedTerminal",
            "requireExactSource": false
        }
    ]
}